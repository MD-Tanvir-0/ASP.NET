<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form and ViewBag Data</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h2 {
            color: #333;
        }

        .container {
            display: flex;
            justify-content: space-between;
        }

        .form-container {
            width: 45%;
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            background-color: #f9f9f9;
            margin-bottom: 20px;
        }

            .form-container label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-container input[type="text"],
            .form-container input[type="password"] {
                width: calc(100% - 22px);
                padding: 10px;
                margin-bottom: 10px;
                box-sizing: border-box;
            }

            .form-container input[type="radio"],
            .form-container input[type="checkbox"] {
                margin-right: 10px;
            }

            .form-container input[type="submit"] {
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .form-container input[type="submit"]:hover {
                    background-color: #45a049;
                }

        .viewbag-container {
            width: 45%;
            border: 2px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            background-color: #f9f9f9;
            margin-bottom: 20px;
        }

        .viewbag-section {
            margin-bottom: 20px;
        }

        .viewbag-heading {
            font-weight: bold;
            color: #333;
            margin-bottom: 5px;
        }

        .viewbag-data {
            color: #555;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <h2>Form Submit</h2>
            <form action="" method="post">
                <label for="username">Name:</label>
                <input type="text" id="username" name="Username" />
                <br />
                <br />
                <label for="password">Password:</label>
                <input type="password" id="password" name="Password" />
                <br />
                <br />
                <label>Gender:</label>
                <input type="radio" id="male" name="male" value="male">
                <label for="male">Male</label>
                <input type="radio" id="female" name="female" value="female">
                <label for="female">Female</label>
                <br />
                <br />
                <label for="profession">Profession:</label>
                <select id="profession" name="Profession">
                    <option value="select">Select</option>
                    <option value="teacher">Teacher</option>
                    <option value="student">Student</option>
                </select>
                <br />
                <br />
                <label>Hobbies:</label>
                <input type="checkbox" id="ride" name="ride" value="Riding Bike">
                <label for="ride">Riding Bike</label>

                <input type="checkbox" id="reading" name="reading" value="Reading book">
                <label for="reading">Reading book</label>

                <input type="checkbox" id="movie" name="movie" value="Watching movie">
                <label for="movie">Watching movie</label>

                <input type="checkbox" id="game" name="game" value="Gaming">
                <label for="game">Gaming</label>
                <br />
                <br />
                <input type="submit" value="Login">
            </form>
        </div>

        <div class="viewbag-container">
            <h2>ViewBag Data</h2>

            <div class="viewbag-section">
                <div class="viewbag-heading">Username:</div>
                <div class="viewbag-data">@ViewBag.Uname</div>
            </div>

            <div class="viewbag-section">
                <div class="viewbag-heading">Password:</div>
                <div class="viewbag-data">@ViewBag.Pass</div>
            </div>

            <div class="viewbag-section">
                <div class="viewbag-heading">Gender:</div>
                <div class="viewbag-data">
                    @ViewBag.male <br>
                    @ViewBag.female
                </div>
            </div>

            <div class="viewbag-section">
                <div class="viewbag-heading">Hobbies:</div>
                <div class="viewbag-data">
                    @ViewBag.game <br>
                    @ViewBag.ride <br>
                    @ViewBag.movie <br>
                    @ViewBag.reading
                </div>
            </div>

            <div class="viewbag-section">
                <div class="viewbag-heading">Profession:</div>
                <div class="viewbag-data">@ViewBag.Profession</div>
            </div>
        </div>
    </div>
</body>
</html>
